@model Event_Management_System.Pages.Event.EditEventModel
@{
    ViewData["Title"] = "Edit Event";
}

<h1>Edit Event</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Event.Title"></label>
        <input asp-for="Event.Title" class="form-control" />
        <span asp-validation-for="Event.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.Date"></label>
        <input asp-for="Event.Date" class="form-control" />
        <span asp-validation-for="Event.Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.Time"></label>
        <input asp-for="Event.Time" class="form-control" />
        <span asp-validation-for="Event.Time" class="text-danger"></span>
    </div><div class="form-group">
        <label asp-for="Event.Location"></label>
        <input asp-for="Event.Location" class="form-control" />
        <span asp-validation-for="Event.Location" class="text-danger"></span>
        <div class="form-group">
            <label asp-for="Event.MaxParticipants"></label>
            <input asp-for="Event.MaxParticipants" class="form-control" />
            <span asp-validation-for="Event.MaxParticipants" class="text-danger"></span>
        </div>
    </div>
    <!-- Add other fields as needed -->
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-page="/Event/ManageEvents">Back to Events</a>
