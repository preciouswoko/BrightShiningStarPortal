@page "{id:int}"
@model Event_Management_System.Pages.Event.RegisterEventModel
@{
    ViewData["Title"] = "Register for Event";
}

<h2>Register for Event</h2>

<div>
    <h3>@Model.Event.Title</h3>
    <p>@Model.Event.Description</p>
    <p><strong>Date:</strong> @Model.Event.Date.ToShortDateString()</p>
    <p><strong>Time:</strong> @Model.Event.Time.ToString("hh\\:mm")</p>
    <p><strong>Location:</strong> @Model.Event.Location</p>
    <p><strong>Max Participants:</strong> @Model.Event.MaxParticipants</p>
</div>

@if (Model.IsRegistered)
{
    <div class="alert alert-success">
        You are already registered for this event.
    </div>
}
else if (Model.IsFull)
{
    <div class="alert alert-danger">
        This event is full. Registration is not possible.
    </div>
}
else
{
    <form method="post">
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
}
